{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "dist",
    /* Linting */
    "strict": true
  },
  "include": [
    "src",
    "__tests__",
    "demo/physics",
    "demo/app.ts",
    "demo/vite-env.d.ts"
  ]
}
